{
	"name": "Ethermine Watcher",
	"description": "Ethermine unpaid balance and worker watcher",
	"manifest_version": 2,
	"version": "1.0.0",
	"icons": {
		"128": "icon.png"
	},
	"permissions": [
		"storage",
		"alarms",
		"notifications",
		"https://api.ethermine.org/*"
	],
	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},
	"background": {
		"scripts": ["bignumber.min.js","global.js","event.js"],
		"persistent": false
	}
}
